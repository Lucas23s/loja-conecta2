@model LojaConecta.Models.Categoria
@{
    ViewData["Title"] = "Categorias";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="my-4">Categoria</h1>
<h4 class="mb-4">Excluir</h4>

<div class="card my-4 border-2 rounded-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 col-lg-8">
                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control border-2 rounded-3 p-2" readonly>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <label for="Preview" class="form-label">Prévia</label>
                <img src='@(Model.Foto ?? @Url.Content("~/img/sem imagem.png"))' id="Preview" class="img-fluid">
            </div>
        </div>
        <h4 class="text-danger w-100">
            Confirma a exclusão desta Categoria?
        </h4>
        <form asp-action="Delete" method="post" class="d-flex mt-4">
            <input type="hidden" asp-for="Id">
            <button type="submit" class="btn btn-outline-danger me-2">
                <i class="fas fa-trash me-1"></i> Excluir
            </a>
            <a asp-action="Index" class="btn btn-outline-info">
                <i class="fas fa-cancel me-1"></i> Cancelar
            </a>
        </form>
    </div>

</div>
</div>